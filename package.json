{
  "name": "smartpay-sdk",
  "private": false,
  "version": "0.1.0",
  "description": "Transport-agnostic smart payment route quoting and execution SDK.",
  "author": "SmartPay Hackathon Team",
  "license": "MIT",
  "homepage": "https://github.com/owizdom/smartpay-sdk#readme",
  "type": "module",
  "main": "smartpay/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owizdom/smartpay-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/owizdom/smartpay-sdk/issues"
  },
  "exports": {
    ".": {
      "import": "./smartpay/index.js",
      "default": "./smartpay/index.js"
    }
  },
  "keywords": [
    "crypto",
    "payments",
    "checkout",
    "wallet",
    "routes",
    "sdk",
    "smart-payment",
    "web3"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "smartpay",
    "README.md"
  ],
  "scripts": {
    "lint": "node --check smartpay/*.js smartpay/adapters/*.js smartpay/internal/*.js",
    "test": "node --test",
    "prepublishOnly": "npm run lint && npm test",
    "demo:web": "python3 -m http.server 4173",
    "demo": "node examples/demo.mjs",
    "demo:foundry": "node examples/foundry-demo.mjs",
    "demo:foundry:fastest": "DEMO_STRATEGY=fastest node examples/foundry-demo.mjs",
    "demo:foundry:cheapest": "DEMO_STRATEGY=cheapest node examples/foundry-demo.mjs",
    "demo:foundry:balanced": "DEMO_STRATEGY=balanced node examples/foundry-demo.mjs",
    "demo:foundry:all": "node examples/foundry-demo.mjs --all"
  },
  "dependencies": {}
}
